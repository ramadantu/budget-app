{
  "always-update": true,
  "plugins": [ "node-workspace" ],
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Fixes" },
    { "type": "chore", "section": "Chores" },
    { "type": "docs", "section": "Docs" }
  ],
  "packages": {
    "apps/web": { "release-type": "node", "component": "web", "separate-pull-requests": true },
    "packages/ui": { "release-type": "node", "component": "ui", "skip-github-release": true, "skip-github-pull-requests": true, "skip-changelog": true}
  }
}
