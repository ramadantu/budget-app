{
  "private": true,
  "name": "budget-app",
  "version": "1.0.0",
  "repository": "https://github.com/ramadantu/budget-app.git",
  "author": "Ramadan Velisha <ramadan.velisha@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start:backend": "yarn workspace @budget-app/backend start",
    "start:web": "yarn workspace @budget-app/web start",
    "start": "concurrently \"yarn start:keycloak\" \"yarn start:backend\" \"yarn start:web\"",
    "start:keycloak": "docker-compose -f ./services/keycloak/docker-compose.yml up",
    "compile:backend": "yarn workspace @budget-app/backend compile",
    "compile:web": "yarn workspace @budget-app/web compile",
    "compile": "yarn compile:backend && yarn compile:web",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,css,md}\""
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "prettier": "3.5.3",
    "typescript-eslint": "^8.34.0"
  }
}
