{
  "private": true,
  "name": "budget-app",
  "version": "1.0.0",
  "repository": "https://github.com/ramadantu/budget-app.git",
  "author": "Ramadan Velisha <ramadan.velisha@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "config/*",
    "packages/*"
  ],
  "scripts": {
    "backup:containers": "bash ./containers/scripts/backup",
    "prisma:migrate ": "yarn workspace @budget-app/backend prisma migrate dev",
    "prisma:generate": "yarn workspace @budget-app/backend prisma generate",
    "prisma:studio": "yarn workspace @budget-app/backend prisma studio",
    "start:containers": "docker-compose -f ./containers/docker-compose.yml up -d --build",
    "start:backend": "yarn workspace @budget-app/backend start",
    "start:web": "yarn workspace @budget-app/web start",
    "start": "concurrently \"yarn start:backend\" \"yarn start:web\"",
    "compile:backend": "yarn workspace @budget-app/backend compile",
    "compile:web": "yarn workspace @budget-app/web compile",
    "compile": "yarn compile:backend && yarn compile:web",
    "build:keycloak": "docker build -t keycloak-curl ./images/keycloak",
    "stop:containers": "docker-compose -f ./containers/docker-compose.yml down",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,css,md}\""
  },
  "devDependencies": {
    "@budget-app/eslint-config": "*",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-problems": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.2.0",
    "prettier": "3.5.3",
    "typescript-eslint": "^8.34.0"
  }
}
