{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "extends": "./rules.json",
  "compilerOptions": {
    "allowJs": false,
    "composite": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  }
}
